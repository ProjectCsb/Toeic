<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
     >

    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="102sp"
        android:text="/" />

    <TextView
        android:id="@+id/slash_mather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/slash"
        android:layout_toRightOf="@+id/slash"
        android:text="10"
        android:textSize="57sp" />

    <TextView
        android:id="@+id/slash_son"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/slash"
        android:layout_toLeftOf="@+id/slash"
        android:text="0"
        android:textSize="57sp" />

    <TextView
        android:id="@+id/text_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/slash"
        android:layout_marginBottom="51dp"
        android:layout_toLeftOf="@+id/slash"
        android:text="Score"
        android:textSize="33sp" />

    <Button
        android:id="@+id/go_to_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:background="#2222ff"
        android:text="Menu"
        android:textColor="#ffffff" />

</RelativeLayout>
